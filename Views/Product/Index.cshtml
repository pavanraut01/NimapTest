@model IEnumerable<NimapCrud.Models.Product>

<h1>Product List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Sr. No.</th>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td> 
                <td>@product.Id</td> <!-- Displaying ProductId -->
                <td>@product.Name</td> <!-- Displaying ProductName -->
                <td>@product.CategoryId</td> <!-- Displaying CategoryId -->
                <td>@product.Category?.Name</td> <!-- Displaying CategoryName -->
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>
